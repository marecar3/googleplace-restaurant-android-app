<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fab="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@android:color/darker_gray">

        <EditText
            android:id="@+id/search_field"
            android:layout_width="@dimen/search_field_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_s"
            android:background="@android:color/white"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionSearch"/>

        <ImageView
            android:id="@+id/location_button"
            android:layout_width="@dimen/location_button_size"
            android:layout_height="@dimen/location_button_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_s"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sort_distance"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/restaurant_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        fab:menu_icon="@drawable/ic_sort_small">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/sort_best_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            fab:fab_size="normal"
            android:src="@mipmap/ic_sort_best_match"
            fab:fab_colorNormal="@android:color/darker_gray"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/sort_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="normal"
            android:src="@mipmap/ic_sort_review"
            fab:fab_colorNormal="@android:color/darker_gray"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/sort_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="normal"
            android:src="@mipmap/ic_sort_distance"
            fab:fab_colorNormal="@android:color/darker_gray"/>

    </com.github.clans.fab.FloatingActionMenu>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>